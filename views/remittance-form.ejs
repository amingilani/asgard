    <div  style="float:right; position:fixed ; right:0 ; bottom:0" >
	<img >
	</div>
        <!-- You only need this form and the form-basic.css -->
	
        <form class="form-basic" method="post" action="#" >
		<div class="form-row">
             <div class="fontSize"> Remittance Form </div>
				
            </div>
            
		<div class="form-row">
             <div class="ss-required-asterisk" aria-hidden="true">* Required </div>
				
            </div>
                            

            <div class="form-row">
                <label>
                    <span>CNIC*</span>
                    <input type="text" name="cnic" required>
                </label>
            </div>
            
           <div class="form-row">
                <label>
                    <span>Sender ID*</span>
                    <input name="id" required>
                </label>
            </div>
            
            
            

            <div class="form-row">
                <label>
                    <span>Amount in Bitcoin*<br></span>
 					<input name="bitcoin" required >
               
                </label>
            </div>

            <div class="form-row">
                <label>
                    <span>Amount paid in Rupees*</span>
                    <input name="rupees" required>
                </label>
            </div>
            
             <div class="form-row">
                <label>
                    <span>Purpose of Remittance*</span>
                    <input name="textarea" required>
                </label>
            </div>

		
              <div class="form-row">
                <label>
                    <span>Address Payment Sent at*</span>
                    <input name="textarea" required>
                </label>
            </div>
         

            <div class="form-row">
                <button type="submit">Submit</button>
            </div>
             
        </form>

</body>

